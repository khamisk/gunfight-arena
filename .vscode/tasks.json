{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Game Server",
            "type": "shell",
            "command": "npm",
            "args": [
                "start"
            ],
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Server running.*",
                    "endsPattern": "^.*$"
                }
            }
        }
    ]
}